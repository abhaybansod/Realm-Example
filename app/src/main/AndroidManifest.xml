<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="abhay.com.mystickynotes">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icons_note"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icons_note"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.StickyHome"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.NewStickyNoteActivity"
            android:icon="@drawable/icons_note">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="abhay.com.mystickynotes.activity.StickyHome" />
        </activity>
    </application>

</manifest>